<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.utexas.ee360p_teamproject.MainActivity">

    <Button
        android:id="@+id/enterRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="enterRoom"
        android:text="Chat!"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="368dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="132dp" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enterRoomButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Username"
        tools:ignore="LabelFor"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="234dp" />

    <Spinner
        android:id="@+id/chatRoomSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editUsername"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editUsername"
        android:layout_marginTop="88dp"
        android:contextClickable="false"
        android:visibility="visible" />

</RelativeLayout>
